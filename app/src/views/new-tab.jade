.page-header
  h2 New Tab

form#new-tab(method='post' action='/tab/new')
  label Amount Owing ($)
  .form-group
    input#amount.form-control(autofocus type='number' name='amount' data-toggle='tooltip' data-placement='top' title='required; must be a number')

  //-label Name 
    //-small (multiple names implies an even split)
  //-.form-group.input-group
    //-input.typeahead.form-control(type='text' name='names[]' data-provide='typeahead' data-toggle='tooltip' data-placement='top' title='required' autocomplete='off' autocorrect='off' autocapitalize='off')
    //-span.input-group-btn
      //-button.btn.btn-default.btn-add(type='button') +

  label Name 
    small (multiple names implies an even split)
  #names
    input#reset
    span.input-group-btn
      button.btn.btn-default.btn-add(type='button') +

  label Description
  .form-group
    input.form-control(type='text' name='description')
    //-textarea.form-control(rows='3' name='description')

  label Date
  .form-group
    input.form-control.date-input(type='date' name='date')

  label Deadline
  .form-group
    input.form-control.date-input(type='date' name='deadline')

  hr

  // Possible to have a tax field as well
  .form-group
    button#addTip.btn.btn-default.btn-block(type='button' name='addTip' value='false')
      span.glyphicon.glyphicon-thumbs-up.glyphicon-pad-right
      | Add Tip (%)

  .form-group.range.temp-hide
    input(id='tip' type='range' oninput='tipNum.value=value' value='0' max='50' min='0' name='tip')
    span.input-group-btn
      #tipNum.btn.btn-default.btn-fake 0%

  hr

  label Paid Using
  .form-group
    select.form-control(name='payment')
      option(value='other') Other
      option(value='cash') Cash
      option(value='credit') Credit
      option(value='debit') Debit

  // Possible save receipt for proof
  //-label Upload receipt
  //-.form-group.text-center
    //-input.text-center.btn.btn-default.btn-block(type='file' name='receipt')

  hr

  h3 Total: 
    | $
    span.total 0.00
    input.total(type='hidden' name='total' value='0')

  hr

  .text-center
    input.btn.btn-info.btn-big(type='submit' value='Add Tab')
